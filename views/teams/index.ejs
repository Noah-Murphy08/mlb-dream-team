<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>View Teams</title>
</head>

<body>
    <%- include('../partials/_navbar.ejs') %>
    <div class="team-idx-head">
        <h1>All Teams</h1>
    </div>

        <ul>
            <% populatedTeams.forEach(team=> { %>
                <li>
                    The <a href="/teams/<%= team._id %>">
                        <%= team.city %>
                            <%= team.name %>
                    </a> created by <%= team.owner.username %>
                </li>
                <% }) %>
        </ul>

        <% if (userTeams.length> 0) { %>
            <h2>My Teams</h2>
            <ul>
                <% userTeams.forEach(team=> { %>
                    <li>
                        The <a href="/teams/<%= team._id %>">
                            <%= team.city %>
                                <%= team.name %>
                        </a> created by <%= team.owner.username %>
                    </li>
                    <% }) %>
            </ul>
            <% } else { %>
                <h2>My Teams</h2>
                <p>You have no teams yet!</p>
                <% } %>
                <div class="team-idx-layout">
                    <div class="team-index-btn">
                        <button type="submit">
                            <div class="team-index-btn"><a href="/players/new">Create a Position Player</a></div>
                        </button>
                    </div>
                    <div class="team-index-btn">
                        <button type="submit">
                            <a href="/pitchers/new">Create a Pitcher</a>
                        </button>
                    </div>
                    <div class="team-index-btn">
                        <button type="submit">
                            <a href="/teams/new">Create a New Team</a>
                        </button>
                    </div>
                </div>
                    
</body>

</html>